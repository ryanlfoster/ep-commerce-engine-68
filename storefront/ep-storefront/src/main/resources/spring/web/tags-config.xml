<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:util="http://www.springframework.org/schema/util"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd"
>
	<bean id="visitedCategoryTagger" class="com.elasticpath.sfweb.listeners.VisitedCategoryTagger"/>
	
	<bean id="inStoreSearchTermTagger" class="com.elasticpath.sfweb.listeners.InStoreSearchEngineQueryTagger"/>
	
    <bean id="cartSubtotalTagger" class="com.elasticpath.sfweb.listeners.CartSubtotalTagger"/>
	

	<!-- Configuration file for Tags related beans -->

    <bean id="tagProcessorsHolder" class="com.elasticpath.sfweb.tags.impl.TagProcessorsHolderImpl">
  		<property name="listTagsProcessors">
			<list>
				<ref bean="visitedCategoryTagger"/>
				<ref bean="inStoreSearchTermTagger"/>				
				<ref bean="cartSubtotalTagger"/>
			</list>
		</property>
    </bean>
    
    
</beans>
