<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:stub="http://www.dinstone.com/schema/stub"
	   xsi:schemaLocation=
	   "http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	    http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
	    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<!-- simulate properties that will be passed in by a web-app -->
	<context:property-placeholder properties-ref="simulatedProperties"/>
	
	<util:properties id="simulatedProperties">
   		<prop key="ep.storefront.port.http">8080</prop>
   		<prop key="ep.storefront.port.https">8443</prop>
   		<prop key="ep.sf.secure.channel">https</prop>
   		<prop key="ep.storefront.contextUrl">http://localhost:8080</prop>
   		<prop key="ep.product.attribute.filter.enable">true</prop>
   		<prop key="ep.localeUrlTool.localeControllerUrl">http://localhost:8080</prop>
   		<prop key="ep.velocity.cache.seconds">60</prop>
   		<prop key="ep.velocity.library.autoreload">true</prop>
   		<prop key="ep.geoip.provider">geoip</prop>   	   		
	</util:properties>

	<import resource="classpath:spring/models/formBean.xml" />
	<import resource="classpath:spring/models/viewBean.xml" />
	<import resource="classpath:spring/dataaccess/dao.xml"/>		
	<import resource="classpath:spring/service/serviceSF.xml" />
	<import resource="classpath:spring/security/security.xml" />
	<import resource="classpath:spring/web/context-config.xml" />
	<import resource="classpath:spring/web/validation-config.xml" />
	<import resource="classpath:spring/web/filter-config.xml" />
	<import resource="classpath:spring/web/tags-config.xml" />
	<import resource="classpath:spring/web/url-mapping.xml" />
	<import resource="classpath:spring/web/ajax-controller.xml" />
	<import resource="classpath:spring/views/velocity/velocity.xml" />
	<import resource="classpath:spring/cache/cache.xml" />

	<import resource="classpath:spring/dataaccess/openjpa/openjpa.xml" />
	<import resource="classpath:spring/commons/util-config.xml" />
	<import resource="classpath:spring/commons/validators.xml" />
	<import resource="classpath:spring/prototypes/prototypes.xml"/>
	<import resource="classpath:spring/models/domainModel.xml" />
	<import resource="classpath:spring/geoip/geoip.xml" />

	<import resource="core-mocked-services.xml" />
	
</beans>
