				<var>
                    <var-name>requiredWhen</var-name>
                    <var-value>saveImport == true</var-value>
                </var>
			</field>
			<field property="saveImport" depends="requiredCondition">
				<arg0 key="import.saveImport" />
				<arg1 key="import.execute" />
				<var>
                    <var-name>condition1</var-name>
                    <var-value>saveImport == false</var-value>
                </var>
				<var>
                    <var-name>condition2</var-name>
                    <var-value>execute == false</var-value>
                </var>
			</field>
			<field property="execute" depends="requiredCondition">
				<arg0 key="import.execute" />
				<arg1 key="import.saveImport" />
				<var>
                    <var-name>condition1</var-name>
                    <var-value>execute == false</var-value>
