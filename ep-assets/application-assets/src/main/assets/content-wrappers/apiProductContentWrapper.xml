<?xml version="1.0" encoding="UTF-8"?> 
<!-- 
     API Product Content Wrapper displays the product with the specified Product Code.

     Input parameters:
      1. productCode, type "Product".
      2. imagePath, type "Image".
-->
<content-wrapper> 
	<template-name>apiProductTemplate.cwt</template-name>
	<wrapper-id>ApiProductContentWrapper</wrapper-id>
	<wrapper-name>Digital Commerce API: Product with Image</wrapper-name>
  
	<user-input-settings>
		<user-input-setting id="imagePath" localizable="true" name="Path to Image File" type="Image" required="true" pass-to-template="true"/>
		<user-input-setting id="productCode" localizable="false" name="Product Code" type="Product" required="true" pass-to-template="false"/>
	</user-input-settings>
</content-wrapper>
